<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ID_LAYOUT_TITLE"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">



    <LinearLayout
            android:id="@+id/id_ll_dian_ming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_10"
            android:orientation="horizontal">


        <TextView
                android:id="@+id/id_tv_dian_ming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="后知后觉的品牌店"
                android:drawablePadding="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textColor="#FF000000"
                android:textSize="16sp"/>
    </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/dip_10"
                    android:layout_marginBottom="@dimen/dip_10"
                    android:paddingBottom="@dimen/dip_10"
                    android:orientation="horizontal">
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/dip_20"
                            android:orientation="horizontal">


                        <ImageView
                                android:id="@+id/ID_IMG_HEAD_PORTRAIT"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:contentDescription="@null"
                                android:src="@drawable/huiyuan_img"
                             />
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dip_10"
                                android:orientation="vertical">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="商品描述撒打算打算"
                                android:layout_gravity="top"
                                android:gravity="center"
                                android:textColor="@color/line_mao_black"
                                android:textSize="14sp"
                        />

                        </LinearLayout>
                </LinearLayout>


                <LinearLayout
                        android:id="@+id/id_ll_dj_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="right|center"
                        android:orientation="vertical" >

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥178"
                            android:gravity="center"
                            android:textColor="@color/line_black"
                            android:textSize="13sp"

                    />


                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x1"
                            android:gravity="center"
                            android:textColor="@color/line_mao_black"
                            android:textSize="13sp"

                    />
                </LinearLayout>

            </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginRight="@dimen/dip_10"
                android:layout_marginTop="@dimen/dip_10"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="购买数量"
                        android:textColor="@color/line_black"
                        android:textSize="13sp"
                />
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="right|center"
                        android:orientation="horizontal" >

                    <Button
                            android:id="@+id/id_jian"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/order_lose"/>

                    <EditText
                            android:id="@+id/id_buy_nub"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/order_box"
                            android:editable="false"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textColor="@color/white"/>

                    <Button
                            android:id="@+id/id_jia"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/order_add">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_20"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配送方式"
                        android:textColor="@color/line_black"
                        android:textSize="13sp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dip_5"
                        android:text="普通快递"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_20"
                    android:gravity="left|center"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单备注"
                        android:textColor="@color/line_black"
                        android:textSize="13sp"
                />
                <EditText
                        android:id="@+id/id_ed_beizhu"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/dip_5"
                        android:editable="false"
                        android:hint="选填请和商家协调一致"
                        android:textSize="@dimen/text_size_13"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip_20"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/dip_10"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共1件"
                        android:textColor="@color/text_qian_hui"
                        android:textSize="13sp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dip_3"
                        android:text="小计:"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="178¥"
                        android:layout_marginLeft="@dimen/dip_10"
                        android:textColor="@color/text_blue999"
                        android:textSize="13sp"
                />
            </LinearLayout>

    </LinearLayout>



</LinearLayout>