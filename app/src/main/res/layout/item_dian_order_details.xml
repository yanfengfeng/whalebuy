<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ID_LAYOUT_TITLE"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">



            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/dip_10"
                    android:layout_marginBottom="@dimen/dip_10"
                    android:paddingBottom="@dimen/dip_10"
                    android:orientation="horizontal">
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/dip_20"
                            android:orientation="horizontal">


                        <ImageView
                                android:id="@+id/ID_IMG_HEAD_PORTRAIT"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:contentDescription="@null"
                                android:src="@drawable/huiyuan_img"
                             />
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dip_10"
                                android:orientation="vertical">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="商品描述撒打算打算"
                                android:layout_gravity="top"
                                android:gravity="center"
                                android:textColor="@color/line_mao_black"
                                android:textSize="14sp"
                        />

                        </LinearLayout>
                </LinearLayout>


                <LinearLayout
                        android:id="@+id/id_ll_dj_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="right|center"
                        android:orientation="vertical" >

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥178"
                            android:gravity="center"
                            android:textColor="@color/line_black"
                            android:textSize="13sp"

                    />


                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x1"
                            android:gravity="center"
                            android:textColor="@color/line_mao_black"
                            android:textSize="13sp"

                    />
                </LinearLayout>

            </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款"
            android:layout_marginRight="@dimen/dip_10"
            android:gravity="center"
            android:layout_gravity="right"
            android:textColor="@color/line_mao_black"
            android:textSize="18sp"  />



</LinearLayout>