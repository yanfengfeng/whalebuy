<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ID_LAYOUT_TITLE"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/hui_bai_bg"
              android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/dip_20"
                    android:paddingLeft="@dimen/dip_10"
                    android:paddingRight="@dimen/dip_10"
                    android:orientation="horizontal">
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/dip_20"
                            android:orientation="horizontal">


                        <ImageView
                                android:id="@+id/ID_IMG_HEAD_PORTRAIT"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:contentDescription="@null"
                                android:src="@drawable/huiyuan_img"
                             />
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dip_10"
                                android:orientation="vertical">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="商品描述"
                                    android:layout_gravity="top"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:id="@+id/tv_miaoshu"/>

                        </LinearLayout>
                </LinearLayout>


                <LinearLayout
                        android:id="@+id/id_ll_dj_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@color/white"
                        android:layout_gravity="right|center"
                        android:orientation="vertical" >

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥178"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="13sp"

                    />


                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x1"
                            android:gravity="center"
                            android:textColor="@color/line_mao_black"
                            android:textSize="13sp"

                    />
                </LinearLayout>

            </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_10"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="left|center"
                    android:layout_marginTop="@dimen/dip_2"
                    android:paddingLeft="@dimen/dip_10"
                    android:paddingRight="@dimen/dip_10"
                    android:background="@color/white"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="退款原因"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="13sp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="多拍"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/dip_10"
                        android:drawableRight="@drawable/arrow_you"

                />

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="left|center"
                    android:layout_marginTop="@dimen/dip_2"
                    android:paddingLeft="@dimen/dip_10"
                    android:paddingRight="@dimen/dip_10"
                    android:background="@color/white"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="退款金额"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="13sp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="¥199.00"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/dip_10"
                        android:visibility="invisible"
                        android:drawableRight="@drawable/arrow_you"

                />

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/white"
                    android:gravity="left|center"
                    android:layout_marginTop="@dimen/dip_2"
                    android:paddingLeft="@dimen/dip_10"
                    android:paddingRight="@dimen/dip_10"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="退款原因"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="13sp"/>
                <EditText
                        android:id="@+id/id_ed_beizhu"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/dip_5"
                        android:editable="false"
                        android:layout_weight="1"
                        android:hint="选填"
                        android:textSize="@dimen/text_size_13"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/white"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/dip_10"
                        android:visibility="invisible"
                        android:drawableRight="@drawable/arrow_you"

                />

            </LinearLayout>

            </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="上传凭证"
            android:gravity="left|center"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_marginRight="@dimen/dip_10"
            android:textColor="@color/text_qian_hui"
            android:textSize="13sp"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dip_20"
            android:gravity="left|center"
            android:paddingLeft="@dimen/dip_10"
            android:paddingRight="@dimen/dip_10"
            android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加图片"
                android:layout_marginLeft="@dimen/dip_10"
                android:textColor="@color/text_blue999"
                android:textSize="13sp"
        />
    </LinearLayout>

    <View
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="0dp"/>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/blue_bg"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="18sp"
        />



</LinearLayout>