<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:background="@drawable/tuijian_bg"
                  android:orientation="vertical">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_gravity="top|right"
            android:layout_height="wrap_content">


        <ImageView
                android:id="@+id/id_tj_img"
                android:layout_width="280dp"
                android:layout_height="140dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:src="@drawable/no_image"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:background="@drawable/tuijian_lanbox_bg"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:drawablePadding="3dp"
                    android:text="返"
                    android:textColor="@android:color/white"
                    android:drawableRight="@drawable/img_zuanshi"
                    android:textSize="@dimen/font_small"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/id_tv_fan_jiage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_small"
                    android:textStyle="bold"/>


        </LinearLayout>

    </FrameLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
        <TextView
                android:id="@+id/buy_nub"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="9999付款"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/tuijian_box_hui"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal"
                android:textStyle="bold"
                android:typeface="normal"/>

    <TextView
            android:id="@+id/tv_good_intro"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="left|center"
            android:text="小清新撒打算打算的撒上大大是大啊是的贸"
            android:textColor="#ff3a3a3a"
            android:textSize="@dimen/font_small"
            android:typeface="normal"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
        <TextView
                android:id="@+id/tv_fan_nub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="left|center"
                android:text="200"
                android:textColor="#ff3a3a3a"
                android:textSize="@dimen/font_small"
                android:typeface="normal"/>
            <TextView
                    android:id="@+id/tv_fan_nub_twos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="left|center"
                    android:text="200"
                    android:textColor="#ff3a3a3a"
                    android:textSize="@dimen/font_small"
                    android:typeface="normal"/>
        </LinearLayout>
        <TextView
            android:id="@+id/good_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="left|center"
            android:text="人民币符号的"
            android:textColor="#ff3a3a3a"
            android:textSize="@dimen/font_small"
            android:typeface="normal"/>



    </LinearLayout>

    </LinearLayout>
    <TextView
            android:id="@+id/tv_xin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="left|center"
            android:text="                  "
            android:background="@drawable/tuijian_hui_bottom_box"
            android:paddingBottom="10dp"
            android:textColor="#ff3a3a3a"
            android:textSize="@dimen/font_small"
            android:typeface="normal"/>

</LinearLayout>