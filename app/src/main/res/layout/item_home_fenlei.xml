<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/id_tv_fuzhuang"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:drawablePadding="2dp"
                        android:drawableTop="@drawable/img_yifu"
                        android:gravity="center"
                        android:text="服装"
                        android:textColor="@color/black"
                        android:textSize="12sp"/>

                <!--android:textColor="@drawable/txt_white_selector"-->
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/id_tv_meizhuang"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:drawablePadding="2dp"
                        android:drawableTop="@drawable/img_meizhuang"
                        android:gravity="center"
                        android:text="美妆"
                        android:textColor="@color/black"
                        android:textSize="12sp"/>
            </LinearLayout>


            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/id_tv_meishi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:drawablePadding="2dp"
                        android:drawableTop="@drawable/img_meishi"
                        android:gravity="center"
                        android:text="美食"
                        android:textColor="@color/black"
                        android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/id_tv_jujia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:drawablePadding="2dp"
                        android:drawableTop="@drawable/img_jujia"
                        android:gravity="center"
                        android:text="居家"
                        android:textColor="@color/black"
                        android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
