<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@color/blue_bg"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="left|center"
                android:gravity="center"
                android:drawableLeft="@drawable/img_wight_fanhui"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="鲸分明细"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="right|center"
                android:drawableRight="@drawable/img_lingdang"
                android:textColor="@color/white"
                android:textSize="16sp"/>
    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingLeft="@dimen/dip_10"
            android:paddingRight="@dimen/dip_10"
            android:background="@color/white"
            android:textSize="12sp"
            android:gravity="left|center_vertical"
            android:text="亲，鲸分兑换购物券即日起暂时停止兑换，6月19日恢复兑换，在此期间，鲸分可以兑换其他更多实惠的权益哦！"
            android:textColor="@color/text_red"
           />

    <FrameLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">
        <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@color/black"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_guize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:drawablePadding="3dp"
                    android:text="鲸分规则"
                    android:layout_gravity="right"
                    android:textColor="#FFBD9036"
                    android:textSize="13sp"
                   />


            <TextView

                    android:id="@+id/tv_jingfen"
                    android:layout_marginTop="@dimen/dip_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:drawablePadding="3dp"
                    android:text="0.00"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#FFD9A43A"
                    android:textSize="40sp"
            />



        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/dip_10"
                    android:layout_marginTop="180dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:drawablePadding="3dp"
                        android:text="鲸分明细"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
            </LinearLayout>



        </LinearLayout>


    </FrameLayout>






</LinearLayout>